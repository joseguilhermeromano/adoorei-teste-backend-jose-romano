                        "description": "ID of the sale",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Return a single sale",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "sale_id": {
                                            "type": "string",
                                            "example": "202403051"
                                        },
                                        "amount": {
                                            "type": "integer",
                                            "example": "35000"
                                        },
                                        "products": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "product_id": {
                                                        "type": "integer",
                                                        "example": "1"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Product 1"
                                                    },
                                                    "price": {
                                                        "type": "string",
                                                        "example": "3.500"
                                                    },
                                                    "amount": {
                                                        "type": "integer",
                                                        "example": "10"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No sale found"
                    }
                }
            },
            "put": {
                "summary": "Update a sale",
                "operationId": "2a65d0740cb94e6a7c0ee8c778ad6c95",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
