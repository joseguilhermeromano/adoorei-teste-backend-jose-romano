            "get": {
                "summary": "Get all products",
                "operationId": "1bfaa78d1c2c3848ab8165c5dadcad3e",
                "responses": {
                    "200": {
                        "description": "Return a collection of products",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "Celular 1"
                                        },
                                        "price": {
                                            "type": "string",
                                            "example": "1.800"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "Aparelho dual chip na cor branca"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/sales": {
            "get": {
                "summary": "Get all sales",
                "operationId": "419ebb078c83262b05f7c639ae8b2c21",
                "responses": {
                    "200": {
                        "description": "Return a collection of sales",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "sale_id": {
                                            "type": "string",
                                            "example": "202403051"
                                        },
                                        "amount": {
                                            "type": "integer",
                                            "example": "35000"
                                        },
                                        "products": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "product_id": {
                                                        "type": "integer",
                                                        "example": "1"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Product 1"
                                                    },
                                                    "price": {
                                                        "type": "string",
                                                        "example": "3.500"
                                                    },
                                                    "amount": {
                                                        "type": "integer",
                                                        "example": "10"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
