                "summary": "Cancel a sale by ID (using SoftDeletes)",
                "description": "Deletes a sale from the database by its ID.",
                "operationId": "deleteSaleById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the sale to delete",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sale deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
